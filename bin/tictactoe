#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic Tac Toe!"
puts "To play computer simulation, please enter 1. To play against the computer, please enter 2. To play against another player, please enter 3."

input = gets.strip

if input == "1"
game = Game.new(player_1 = Players::Computer.new("X"), player_2 = Players::Computer.new("O"))
game.play

elseif input == "2"
  puts "If you would like to play first, please enter 1."
  puts "If you would like to play second, plesae enter 2."
  player = gets.strip
game = Game.new(player_1 = Players::Human.new("X"), player_2 = Players::Computer.new("O"))
game.play

end

